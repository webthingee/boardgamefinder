{
  "manifest_version": 3,
  "name": "Board Game Finder",
  "version": "0.0.1",
  "description": "Search for details of a board game using multiple websites",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus",
    "tabGroups",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.amazon.com/*",
    "https://www.boardgameoracle.com/*",
    "https://boardgamegeek.com/*"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  }
} 